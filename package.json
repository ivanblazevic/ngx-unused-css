{
  "name": "ngx-unused-css",
  "version": "3.0.4",
  "description": "Detect unused CSS in angular components",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "lint": "eslint --ext .ts src/**",
    "lint:fix": "eslint --fix --ext .ts src/**",
    "test": "jest src/**",
    "e2e": "jest e2e/test.ts",
    "e2e:manual": "cd e2e && npm run unusedCSS",
    "e2e:init": "node dist/index --init",
    "prepare": "husky install"
  },
  "keywords": [
    "angular",
    "unused",
    "css",
    "detect",
    "find"
  ],
  "author": "Ivan Blazevic",
  "license": "ISC",
  "dependencies": {
    "chalk": "4.0.0",
    "jsdom": "19.0.0",
    "meow": "9.0.0",
    "purgecss": "4.0.3",
    "prompts": "2.4.2",
    "sass": "1.48.0",
    "table": "6.8.0",
    "tslib": "2.3.1"
  },
  "bin": {
    "ngx-unused-css": "./dist/index.js"
  },
  "bugs": "https://github.com/ivanblazevic/ngx-unused-css/issues",
  "homepage": "https://github.com/ivanblazevic/ngx-unused-css",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivanblazevic/ngx-unused-css"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test",
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/jsdom": "^16.2.14",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "17.0.8",
    "@types/table": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "mock-fs": "^4.14.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^8.10.2",
    "typescript": "4.5.4"
  }
}
